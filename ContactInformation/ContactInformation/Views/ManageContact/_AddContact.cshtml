@{
    ViewBag.Title = "Add New Contact";
}
<form name="AddContactForm">
    <table><tr><td height="10px"></td></tr></table>

    <table cellpadding="4" cellspacing="4" width="70%" align="center" style="background-color: skyblue;border:solid 2px red; padding-top:20px;">
        <tr>
            <td colspan="3" style="background-color:gray; font-size:18pt;font-weight:bold; height:30px; text-align:center;">
                Add New Contact
            </td>
        </tr>
        @*<tr>
            <td style="text-align:right;">Contact ID</td>
            <td><input type="text" ng-model="ContactID" />  </td>
        </tr>*@
        <tr>
            <td style="text-align:right;">First Name</td>
            <td><input type="text" ng-model="FirstName" ng-maxlength="50" required /> 
             </td>
        </tr>
        <tr>
            <td style="text-align:right;">Last Name</td>
            <td><input type="text" ng-model="LastName" ng-maxlength="50" required />  </td>
        </tr>
        <tr>
            <td style="text-align:right;">Email</td>
            <td><input type="email" ng-model="Email" ng-maxlength="200" required />  </td>
        </tr>
        <tr>
            <td style="text-align:right;">Phone Number</td>
            <td><input type="number" ng-model="PhoneNumber" ng-pattern="/^[7-9][0-9]{9}$/" required /></td>
        </tr>
        <tr>
            <td style="text-align:right;">Status</td>
            <td><input type="checkbox" ng-model="isActive" />  </td>
        </tr>

        <tr>
            <td></td>
            <td>
                <input type="button" value="Save" data-ng-click="save()"  ng-disabled="!AddContactForm.$valid" />
            </td>
        </tr>

    </table>
</form>