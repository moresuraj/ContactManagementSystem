@{
    ViewBag.Title = "Edit Contact";
}
<form name="EditContactForm">
    <table><tr><td height="10px"></td></tr></table>

    <table cellpadding="4" cellspacing="4" width="70%" align="center" style="background-color: skyblue; border:solid 2px red; padding-top:20px;">
        <tr><td colspan="3" style="background-color:gray; font-size:18pt; font-weight:bold; height:30px; text-align:center;">Edit Contact Information</td></tr>
        @*<tr>
            <td style="text-align:right;">Contact ID</td>
            <td><input type="text" ng-model="Contact.contactID" />  </td>
        </tr>*@
        <tr>
            <td style="text-align:right;">First Name</td>
            <td><input type="text" ng-model="Contact.firstName"  required/>  </td>
        </tr>
        <tr>
            <td style="text-align:right;">Last Name</td>
            <td><input type="text" ng-model="Contact.lastName"required />  </td>
        </tr>
        <tr>
            <td style="text-align:right;">Email</td>
            <td><input type="text" ng-model="Contact.email" required />  </td>
        </tr>
        <tr>
            <td style="text-align:right;">Phone Number</td>
            <td><input type="text" ng-model="Contact.phoneNumber" ng-pattern="/^[7-9][0-9]{9}$/" required/>  </td>
        </tr>
        <tr>
            <td style="text-align:right;">Status</td>
            <td><input type="checkbox" ng-model="Contact.isActive" />  </td>
        </tr>
        <tr>
            <td></td>
            <td>
                <input type="button" value="Save" ng-click="save()" ng-disabled="!EditContactForm.$valid " />
                <br />
                <div>{{error}}</div>
            </td>
        </tr>

    </table>
</form>